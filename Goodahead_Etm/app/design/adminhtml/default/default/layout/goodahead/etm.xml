<layout>
    <adminhtml_etm_attribute_index>
        <reference name="content">
            <block type="goodahead_etm/adminhtml_attribute" name="etm.attribute.grid_container" />
        </reference>
    </adminhtml_etm_attribute_index>
    <adminhtml_etm_attribute_grid>
        <block type="goodahead_etm/adminhtml_attribute_grid" name="root" />
    </adminhtml_etm_attribute_grid>
    <adminhtml_etm_attribute_edit>
        <update handle="editor" />

        <reference name="content">
            <block type="goodahead_etm/adminhtml_attribute_edit" name="attribute_edit_content" />
        </reference>
        <reference name="left">
            <block type="goodahead_etm/adminhtml_attribute_edit_tabs" name="etm.attribute.form_container">
                <block type="goodahead_etm/adminhtml_attribute_edit_tab_form" name="etm_attribute_edit_tab_main" />
                <block type="goodahead_etm/adminhtml_attribute_edit_tab_options" name="etm_attribute_edit_tab_labels" />
                <action method="addTab"><name>main_section</name><block>etm_attribute_edit_tab_main</block></action>
                <action method="addTab"><name>labels_section</name><block>etm_attribute_edit_tab_labels</block></action>
            </block>
        </reference>
        <reference name="js">
            <block type="adminhtml/template" name="attribute_edit_js" template="goodahead/etm/entity/attribute/js.phtml"></block>
        </reference>
    </adminhtml_etm_attribute_edit>
    <adminhtml_etm_entity_index>
        <reference name="content">
            <block type="adminhtml/store_switcher" name="store_switcher" before="-"></block>
            <block type="goodahead_etm/adminhtml_entity" name="etm.entity.grid_container" />
        </reference>
    </adminhtml_etm_entity_index>
    <adminhtml_etm_entity_grid>
        <block type="goodahead_etm/adminhtml_entity_grid" name="root" />
    </adminhtml_etm_entity_grid>
    <adminhtml_etm_entity_edit>
        <update handle="editor" />

        <reference name="content">
            <block type="adminhtml/store_switcher" name="store_switcher" before="-"></block>
            <block type="goodahead_etm/adminhtml_entity_edit" name="etm.entity.form_container" />
        </reference>
    </adminhtml_etm_entity_edit>
    <adminhtml_etm_entitytype_grid>
        <block type="goodahead_etm/adminhtml_entity_types_grid" name="root" />
    </adminhtml_etm_entitytype_grid>
    <adminhtml_etm_entitytype_index>
        <reference name="content">
            <block type="goodahead_etm/adminhtml_entity_types" name="etm.entity.types.grid_container" />
        </reference>
    </adminhtml_etm_entitytype_index>
    <adminhtml_etm_entitytype_edit>
        <update handle="editor" />

        <reference name="content">
            <block type="goodahead_etm/adminhtml_entity_types_edit" name="etm.entity.types.content" />
        </reference>
        <reference name="left">
            <block type="goodahead_etm/adminhtml_entity_types_edit_tabs" name="etm.entity.types.form_container">
                <block type="goodahead_etm/adminhtml_entity_types_edit_tab_form" name="etm_entity_type_edit_tab_main" />
                <block type="goodahead_etm/adminhtml_entity_types_edit_tab_entity" name="etm_entity_type_edit_tab_page_layout" />
                <block type="goodahead_etm/adminhtml_entity_types_edit_tab_list" name="etm_entity_type_edit_tab_list_page_layout" />
                <action method="addTab"><name>main_section</name><block>etm_entity_type_edit_tab_main</block></action>
                <action method="addTab"><name>page_layout_section</name><block>etm_entity_type_edit_tab_page_layout</block></action>
                <action method="addTab"><name>list_page_layout_section</name><block>etm_entity_type_edit_tab_list_page_layout</block></action>
            </block>
        </reference>
        <reference name="js">
            <block type="adminhtml/template" name="goodahead_etm_entity_type_edit_variables_js" template="goodahead/etm/entity/type/edit/variables.phtml"></block>
        </reference>
    </adminhtml_etm_entitytype_edit>

    <adminhtml_catalog_product_attribute_edit>
        <reference name="js">
            <block type="adminhtml/template" name="goodahead_etm_entity_type_edit_js" template="goodahead/etm/catalog/product/attribute/js.phtml"></block>
        </reference>
    </adminhtml_catalog_product_attribute_edit>
</layout>
